<odoo>
  <data>
    <record id="res_config_settings_view_form_tools_acc" model="ir.ui.view">
      <field name="name">res.config.settings.view.form.inherit.tools.ac</field>
      <field name="model">res.config.settings</field>
      <field name="priority" eval="100"/>
      <field name="inherit_id" ref="l10n_cu_tools.res_config_settings_view_form_tools"/>
      <field name="arch" type="xml">
           <h2 name="Tools" position="before">
               <h2>Lock Date</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-xs-12 col-md-7 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="tools_lock_date" class="col-md-6 o_light_label"
                                       attrs="{'invisible': [('tools_lock_date', '=', False)]}"/>
                                <field name="tools_lock_date" class="oe_inline"
                                       attrs="{'invisible': [('tools_lock_date', '=', False)]}"/>
                                <button name="set_tools_lock_date_wizard" string="Set Tools Lock Date"
                                        type="object" class="oe_highlight"/>
                            </div>
                        </div>
                    </div>
           </h2>
      </field>
    </record>

  </data>
</odoo>