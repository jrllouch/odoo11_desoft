<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_l10n_cu_asset_add_depreciation" model="ir.ui.view">
            <field name="name">l10n_cu.asset.add.depreciation.form</field>
            <field name="model">l10n_cu.asset.add.depreciation</field>
            <field name="arch" type="xml">
                <form string="Modify depreciation">
                    <group colspan="4">
                        <label string="In this wizard the ability to modify the asset depreciation is provided." colspan="4"/>
                        <newline/>
                        <separator colspan="4"/>
                    </group>
                    <group>
	                    <group>
	                        <field name="asset_id" readonly="1"/>
	                    </group>
	                    <group>
	                        <field name="value_amount_depreciation" />
	                    </group>
                    </group>
                    <footer>
                        <button name="accept" string="Accept" type="object"
                                class="oe_highlight"/>
                        or
                        <button special="cancel" string="Cancel" class="oe_link"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>